<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="selecttopicpane" prefHeight="526.0" prefWidth="670.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.TopicController">
   <children>
      <Label layoutX="43.0" layoutY="40.0" prefHeight="50.0" prefWidth="235.0" text="SELECT TOPIC" textFill="#2a1e17">
         <font>
            <Font name="System Bold" size="33.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Label>
      <HBox layoutX="43.0" layoutY="115.0" prefHeight="100.0" prefWidth="586.0" spacing="25.0">
         <children>
            <Button fx:id="historybtn" alignment="CENTER" contentDisplay="TOP" mnemonicParsing="false" prefHeight="90.0" prefWidth="130.0" text="History">
               <graphic>
                  <ImageView fitHeight="78.0" fitWidth="101.0" pickOnBounds="true">
                     <image>
                        <Image url="@../../assets/history.png" />
                     </image>
                  </ImageView>
               </graphic>
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <Button fx:id="agriculturebtn" alignment="CENTER" contentDisplay="TOP" mnemonicParsing="false" prefHeight="80.0" prefWidth="130.0" text="Agriculture">
               <graphic>
                  <ImageView fitHeight="78.0" fitWidth="101.0" pickOnBounds="true">
                     <image>
                        <Image url="@../../assets/agriculture.png" />
                     </image>
                  </ImageView>
               </graphic>
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
   <stylesheets>
      <URL value="@../css/button.css" />
      <URL value="@../css/label.css" />
      <URL value="@../css/panes.css" />
      <URL value="@../css/textfield.css" />
   </stylesheets>
</AnchorPane>
